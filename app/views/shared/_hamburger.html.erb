<div class="hamburger">
  <div class="hamburger__content">
    <header class="hamburger__content__header">
      <h2 class="fs-l fw-bold flex-1 break-word lh-tight">Railslation</h2>

      <button class="crayons-btn crayons-btn--ghost crayons-btn--icon-rounded js-hamburger-trigger shrink-0" onclick="toggleHamburgerNav()">
        <%= inline_svg_tag("x.svg", aria: true, class: "crayons-icon") %>
      </button>
    </header>

    <div class="p-2">
      <%= render "shared/site_description" %>
      <%= render partial: "layouts/main_nav" %>
    </div>
  </div>
  <div class="hamburger__overlay js-hamburger-trigger"></div>
</div>

<script>
  function toggleHamburgerNav() {
    const { leftNavState = 'closed' } = document.body.dataset;

    document.body.dataset.leftNavState =
      leftNavState === 'open' ? 'closed' : 'open';
  }
</script>